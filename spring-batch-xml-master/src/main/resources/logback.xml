<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss}|%-5level|%msg ||%class:%line %n</pattern>
        </encoder>
    </appender>
    <!-- the console defaults to INFO level-->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>